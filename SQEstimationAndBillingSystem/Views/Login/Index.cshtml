
@model SQEstimationAndBillingSystem.Models.UserModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> @SQEstimationAndBillingSystem.Resources.LogIn</title>
    <style type="text/css">

        body {
            margin: 20pt !important;
        }

        .error {
            color: red;
        }

        .login-box {
            width: 32%;
            margin-top: 20px;
            height: 85%;
            margin: auto;
            /*border: 3px solid red;*/
            border: 1px solid #cccccc;
            padding: 10px;
            background-color: #fff;
            border-radius: 5px;
            padding: 1em 1em;
            text-decoration: none;
            /*background: #f7f7f7;*/
            border-top: solid 6px #3c8dbc;
            color: #3c8dbc;
            /*font-weight: bold;*/
            box-shadow: 0px 2px 2px rgba(01, 1, 0, 0.29);
            padding: 20px;
        }
    </style>
</head>
<body>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div style="max-width: 400px;" class="login-box">
            <div class="login-logo" style="text-align:center">
                @*<img src="~/Content/images/SNP LOGO1.JPG" style="height: 55%;width:55%" />*@
            </div>

            @SQEstimationAndBillingSystem.Resources.UserName
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
            </div>
            <br />
            @SQEstimationAndBillingSystem.Resources.Password
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
            </div>
            <div class="checkbox" style="margin-left: 17px;">
                @SQEstimationAndBillingSystem.Resources.RememberMe
                @*@Html.Label(SQEstimationAndBillingSystem.Resources.RememberMe, new { @for = SQEstimationAndBillingSystem.Resources.RememberMe })*@
                @Html.CheckBoxFor(m => m.RememberMe, new { @style = "margin-left: -110px;" })
            </div>
            <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
            <input type="submit" value="@SQEstimationAndBillingSystem.Resources.Submit" class="btn btn-primary" />
            <br />
            <br />
            <div id="dvMessage" style="display:none" class="alert alert-danger">
                <strong> @SQEstimationAndBillingSystem.Resources.Error!</strong>
                <span>@ViewBag.Message</span>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }
</body>
</html>
